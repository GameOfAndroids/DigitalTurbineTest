<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="100dp" app:cardCornerRadius="@dimen/cardview_medium_radius"
                                   android:elevation="@dimen/cardview_medium_elevation"
                                   android:layout_marginEnd="@dimen/cardview_default_margin"
                                   android:layout_marginStart="@dimen/cardview_default_margin"
                                   android:layout_marginBottom="@dimen/cardview_default_top_bottom_margin"
                                   android:layout_marginTop="@dimen/cardview_default_top_bottom_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView909"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nameTextView"
                app:layout_constraintStart_toStartOf="@+id/nameTextView" android:text="@string/rating_label"
                android:fontFamily="@font/roboto_light_italic" android:textSize="12sp"
                android:textColor="@color/colorAccent"/>
        <TextView
                android:text="This is a test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameTextView"
                app:layout_constraintStart_toEndOf="@+id/thumbImageView" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/thumbImageView"
                android:textSize="18sp" android:textColor="@android:color/black"
                android:fontFamily="@font/roboto"/>
        <ImageView
                android:layout_width="@dimen/imageview_thumb_square"
                android:layout_height="@dimen/imageview_thumb_square" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/thumbImageView"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/imageview_product_content_description"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingTextView"
                app:layout_constraintTop_toTopOf="@+id/textView909"
                app:layout_constraintBottom_toBottomOf="@+id/textView909"
                app:layout_constraintStart_toEndOf="@+id/textView909"
                android:fontFamily="@font/roboto_light_italic" android:textSize="12sp"
                android:textColor="@color/colorAccent" app:layout_constraintVertical_bias="0.0"
                android:layout_marginStart="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>