<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="160dp"
                                   android:layout_height="210dp" app:cardCornerRadius="@dimen/cardview_medium_radius"
                                   android:elevation="@dimen/cardview_medium_elevation"
                                   android:layout_marginEnd="16dp"
                                   android:layout_marginStart="16dp"
                                   android:layout_marginBottom="12dp"
                                   android:layout_marginTop="12dp"
                                   app:cardElevation="4dp" android:id="@+id/productItemCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView909"
                android:text="@string/rating_label"
                android:fontFamily="@font/roboto_light_italic" android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="This is a test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nameTextView"
                android:textSize="14sp" android:textColor="@android:color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="2dp" app:layout_constraintBottom_toTopOf="@+id/textView909"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/thumbImageView"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/imageview_product_content_description"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/nameTextView"
                android:background="@drawable/background_translucent_dark_no_radius"/>
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingTextView"
                app:layout_constraintTop_toTopOf="@+id/textView909"
                app:layout_constraintBottom_toBottomOf="@+id/textView909"
                android:fontFamily="@font/roboto_light_italic" android:textSize="12sp"
                android:textColor="@color/colorAccent" app:layout_constraintVertical_bias="0.0"
                tools:text="texty" app:layout_constraintStart_toEndOf="@+id/textView909"
                android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>